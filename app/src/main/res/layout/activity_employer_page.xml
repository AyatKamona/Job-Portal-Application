<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/updateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <Button
        android:id="@+id/postJobButton"
        android:layout_width="126dp"
        android:layout_height="74dp"
        android:backgroundTint="#49199E"
        android:text="@string/post_job"
        app:iconTint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549"
        app:rippleColor="#9C27B0" />

    <Button
        android:id="@+id/moveToRecommend"
        android:layout_width="200dp"
        android:layout_height="74dp"
        android:backgroundTint="#49199E"
        android:text="Employee Recommendations"
        app:iconTint="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postJobButton"
        android:layout_marginTop="20dp"
        app:rippleColor="#9C27B0" />

    <Button
        android:id="@+id/showApplicants"
        android:layout_width="200dp"
        android:layout_height="74dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="#49199E"
        android:text="Show Applicants"
        app:iconTint="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postJobButton"
        app:rippleColor="#9C27B0" />

    <TextView
        android:id="@+id/welcomeLabel"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:text="Welcome Employer!"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

</androidx.constraintlayout.widget.ConstraintLayout>
